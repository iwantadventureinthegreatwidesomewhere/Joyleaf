<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
                 xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                 x:Class="Joyleaf.Views.ItemPopupPage">
    
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation
            DurationIn="400"
            DurationOut="400"
            EasingIn="CubicOut"
            EasingOut="CubicOut"
            PositionIn="Bottom"
            PositionOut="Bottom"
            ScaleIn="1"
            ScaleOut="1"/>
    </pages:PopupPage.Animation>
    
    <Frame BackgroundColor="White" CornerRadius="15" HorizontalOptions="Fill" Margin="25,150" VerticalOptions="Fill">
        <StackLayout Margin="10" Orientation="Vertical">
            <Label x:Name="ProductName" TextColor="#333333" FontAttributes="Bold" FontSize="23"/>
        
            <Label Text="In order to use The Strain API you need to apply for an API key. Applying for a key is easy and approval is automated. This system is in place only to track usage and try to prevent abuse of the API. " FontSize="15"/>

        
        </StackLayout>
        
    </Frame>
</pages:PopupPage>